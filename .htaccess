# lak24 Bot â€” Apache Security Configuration
# Deny access to sensitive directories and files

# Deny access to class files
<FilesMatch "^(config\.php)$">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
    <IfModule !mod_authz_core.c>
        Order deny,allow
        Deny from all
    </IfModule>
</FilesMatch>

# Deny access to sensitive directories
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Block direct access to classes, prompts, cache, logs, sessions, uploads
    RewriteRule ^classes/ - [F,L]
    RewriteRule ^prompts/ - [F,L]
    RewriteRule ^cache/ - [F,L]
    RewriteRule ^logs/ - [F,L]
    RewriteRule ^sessions/ - [F,L]
    RewriteRule ^uploads/ - [F,L]
    RewriteRule ^docs/ - [F,L]
</IfModule>

# Prevent directory listing
Options -Indexes

# Set default charset
AddDefaultCharset UTF-8

# Security headers
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "SAMEORIGIN"
    Header set X-XSS-Protection "1; mode=block"
    Header set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# PHP settings
<IfModule mod_php.c>
    php_value upload_max_filesize 10M
    php_value post_max_size 12M
    php_value max_execution_time 60
</IfModule>
